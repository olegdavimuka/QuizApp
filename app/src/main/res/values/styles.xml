<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Status bar-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="QuestionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/question_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/question_margin_start</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AnswersRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/answers_margin_bottom_top</item>
        <item name="android:layout_marginStart">@dimen/answers_margin_start</item>
        <item name="android:layout_marginTop">@dimen/answers_margin_bottom_top</item>
    </style>

    <style name="AnswerRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@android:color/white</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginBottom">@dimen/submit_margin_bottom_top</item>
        <item name="android:layout_marginEnd">@dimen/submit_margin_end</item>
        <item name="android:layout_marginTop">@dimen/submit_margin_bottom_top</item>
        <item name="android:text">@string/Submit</item>
    </style>


</resources>